{
  "ConnectionStrings": {
    "Database": "Host=postgres;Port=5432;Database=appkernel;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "redis:6379"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "BackgroundJobs": {
    "Outbox": {
      "Schedule": "0/15 * * * * *"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173"
    ],
    "AllowCredentials": true
  },
  "JwtSettings": {
    "SecretKey": "X2yM7k4r9YbEw8aD6JZKZ2FJt3m9eXy2k8pZ7WJ0s8E=",
    "Issuer": "appkernel",
    "Audience": "appkernel",
    "ExpireMinutes": "60"
  },
  "AuthTokenOptions": {
    "AccessTokenTtlMinutes": 15,
    "RefreshTokenTtlDays": 30,
    "RefreshTokenPepper": "change-me-refresh-pepper",
    "UseRefreshTokenCookie": true,
    "RefreshCookieName": "rt",
    "RefreshCookieSameSite": "Lax",
    "RefreshCookiePath": "/"
  },
  "RootUser": {
    "Email": "root@system.local",
    "Password": "123456"
  },
  "DefaultTenant": {
    "Code": "DEF",
    "Name": "Default Tenant"
  }
}
